@page "/alerttest"

@using Components.RazorComponents
<Alert 
    Style="Alert<string>.AlertStyle.Danger" 
    TMessage="string"
    ExampleMessage="exampleMessage">

    <ChildContent>
        This is a test
    </ChildContent>

    <TypedChildContent Context="messageContext">
        @{
            string message = messageContext;
        }
        <p class="fs-3 text-primary">@message</p>
    </TypedChildContent>
</Alert>

<Alert Style="Alert<string>.AlertStyle.Success">
    <ChildContent>
        This is another test
    </ChildContent>
</Alert>

<Alert Style="Alert<string>.AlertStyle.Success" />

@code {
    string exampleMessage = "Example Alert Message. Rendered in TypedChildContent";
}