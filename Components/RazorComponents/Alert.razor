<div class="@($"alert alert-{Style.ToString().ToLower()}")" role="alert">
    @* A simple primary alert—check it out! *@

    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = @<b>This is a dafault value</b>;

    [Parameter]
    public AlertStyle Style { get; set; }

    public enum AlertStyle
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        Light,
        Dark
    }
}